<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/bg">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="85dp"
                    android:layout_centerVertical="true" android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" android:background="@drawable/bg_white">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="30dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/title"
                      android:text="采购申请审批 -SP-2365698KK" android:textSize="14sp" android:textColor="@color/black"
                      android:alpha="0.9" android:layout_marginLeft="13dp" android:layout_centerVertical="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/type"
                      android:text="等待下一级审批" android:textSize="12sp" android:textColor="@color/green"
                      android:layout_centerVertical="true" android:layout_alignParentRight="true"
                      android:layout_marginRight="12dp"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/black"
                  android:alpha="0.05" android:layout_alignParentBottom="true" android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp"/>
        </RelativeLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/name"
                  android:text="申请人：王大锤" android:textSize="11sp" android:textColor="@color/black" android:alpha="0.6"
                  android:layout_centerVertical="true" android:layout_marginLeft="13dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/time"
                  android:text="申请日期：2018-12-22 17:30" android:textSize="11sp" android:textColor="@color/black"
                  android:alpha="0.6" android:layout_centerVertical="true" android:layout_marginLeft="160dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/money"
                  android:text="申请金额：1.5万元" android:textColor="@color/orange" android:textSize="11sp"
                  android:layout_marginLeft="13dp" android:layout_alignParentBottom="true"
                  android:layout_marginBottom="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/address"
                  android:layout_marginLeft="160dp" android:text="归属项目：铜川市沈家河水库" android:textSize="11sp"
                  android:textColor="@color/black" android:alpha="0.6" android:layout_alignParentBottom="true"
                  android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</RelativeLayout>