<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:background="@color/bg"
             android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp">
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:text="全部资料"
                      android:gravity="center" android:layout_marginLeft="12dp" android:textSize="13sp"
                      android:textColor="@color/colorPrimary" android:drawableRight="@drawable/jian_down"
                      android:drawablePadding="5dp"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="@color/white" android:overScrollMode="never"/>
    </LinearLayout>
</FrameLayout>