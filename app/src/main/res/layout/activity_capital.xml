<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical"
        tools:context=".CapitalActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="44dp"
                    android:background="@color/colorPrimary">
        <ImageButton android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/back"
                     android:background="@color/colorPrimary" android:id="@+id/back"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="资金统计"
                  android:layout_centerInParent="true" android:textColor="@color/white" android:textSize="18sp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="35dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="维养资金使用占比"
                  android:layout_centerVertical="true" android:layout_marginLeft="13dp" android:textSize="15sp"
                  android:textColor="@color/black" android:alpha="0.8"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2018年"
                  android:drawableRight="@drawable/jian_down" android:textColor="@color/colorPrimary"
                  android:textSize="13sp" android:layout_centerVertical="true" android:layout_alignParentRight="true"
                  android:layout_marginRight="13dp" android:drawablePadding="5dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="215dp" android:background="@color/white">
        <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>