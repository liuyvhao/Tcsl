<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MapSearchActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="44dp"
                    android:background="@color/colorPrimary">
        <ImageButton android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/back"
                     android:background="@color/colorPrimary" android:id="@+id/back"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="地图查找"
                  android:layout_centerInParent="true" android:textSize="18sp" android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <com.amap.api.maps.MapView android:id="@+id/mapView" android:layout_width="match_parent"
                                   android:layout_height="match_parent"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/map_search_left" android:layout_marginLeft="12dp"
                   android:layout_marginTop="42dp"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="88dp"
                        android:background="@drawable/map_search_bg" android:layout_alignParentBottom="true"
                        android:layout_marginBottom="26dp" android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/map_bottom_img" android:layout_centerVertical="true"
                       android:layout_alignParentRight="true" android:layout_marginRight="30dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="铜川市沈家河水库"
                      android:textSize="13sp" android:layout_marginLeft="17dp" android:layout_marginTop="15dp"
                      android:textColor="@color/black" android:alpha="0.9" android:id="@+id/map_title"/>
            <TextView android:layout_width="45dp" android:layout_height="15dp" android:text="水库工程"
                      android:background="@drawable/solid_label" android:textSize="9sp"
                      android:layout_centerVertical="true" android:textColor="@color/colorPrimary"
                      android:gravity="center" android:layout_marginLeft="18dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="距离：1.5km"
                      android:layout_centerVertical="true" android:layout_marginLeft="75dp" android:textSize="11sp"
                      android:textColor="@color/black" android:alpha="0.6"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="位置详情：铜川市耀州区什么镇什么村58号" android:layout_marginLeft="16dp"
                      android:layout_alignParentBottom="true" android:layout_marginBottom="19dp" android:textSize="11sp"
                      android:textColor="@color/black" android:alpha="0.6"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>