<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".PendActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="44dp"
                    android:background="@color/colorPrimary">
        <ImageButton android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/back"
                     android:background="@color/colorPrimary" android:id="@+id/back"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="待审批"
                  android:layout_centerInParent="true" android:textColor="@color/white" android:textSize="18sp"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView" android:layout_width="match_parent"
            android:layout_height="match_parent" android:overScrollMode="never"/>
</LinearLayout>